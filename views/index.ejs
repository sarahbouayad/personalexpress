<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Collaborative Playlist</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Playlist</h1>
  <h2>Create Your Vibe</h2>

  <h2>Add a Song</h2>


  <form action="/songCollection" method="POST">
    <input type="text" placeholder="Artist Name" name="artistName">
    <input type="text" placeholder="Song Title" name="msg">
    <input type="text" placeholder="Music Video" name="musicVideo">
    <button type="submit">Submit</button>
  </form>

  <h3></h3>
  <ul class="messages">
  <% for(var i=0; i<playlistCollection.length; i++) {%>
    <li class="message">
      <span><%= playlistCollection[i].artistName %></span>
      <span><%= playlistCollection[i].msg %></span>
      <span><%= playlistCollection[i].upVote %></span>
      <iframe width="360" height="215" src="<%= playlistCollection[i].musicVideo %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <span><i class="fa fa-caret-up" aria-hidden="true"></i></span>

       <!-- worked with Jeffrey Moreta alum on this code below -->
      <% if(playlistCollection[i].heart === true) { %>
        <span><i class="fa fa-heart heart-red" data-heart="true" aria-hidden="true"></i></span>
      <% } else { %>
        <span><i class="fa fa-heart heart-black" data-heart="false" aria-hidden="true"></i></span>
      <% } %>

      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <script src="main.js"></script>

</body>
</html>
